{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "jsx": "react",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "lib": ["es6", "dom", "es2016", "es2017", "es2018"],
        "declaration": true,
        "allowJs": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist", "rollup.config.js"]
}
